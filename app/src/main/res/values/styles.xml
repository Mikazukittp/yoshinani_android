<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/grey200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/CustomDrawerArrowStyle</item>
        <item name="colorPrimary">@color/theme600</item>
        <item name="colorPrimaryDark">@color/theme800</item>
        <item name="colorAccent">@color/accent500</item>
        <item name="colorControlNormal">@color/grey800</item>
        <item name="colorControlActivated">@color/accent500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="CustomDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>


    <style name="toolbarMenuTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/grey800</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="table_header_column">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="table_input_column">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="table_input_column.textInputLayout">
        <item name="android:baselineAlignedChildIndex">0</item>
    </style>

    <style name="table_input_column.button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="whiteEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="whiteEditTextHint" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
